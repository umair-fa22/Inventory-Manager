# Application Environment Configuration
# Generated by Ansible for {{ inventory_hostname }}

# Application Settings
APP_ENV={{ app_env | default('development') }}
APP_PORT={{ app_port | default('5000') }}
APP_HOST=0.0.0.0

# Database Configuration (if using RDS)
{% if db_host is defined %}
DB_HOST={{ db_host }}
DB_PORT={{ db_port | default('5432') }}
DB_NAME={{ db_name | default('inventory_manager') }}
DB_USER={{ db_user | default('admin') }}
DB_PASSWORD={{ db_password }}
{% endif %}

# Redis Configuration (if using ElastiCache)
{% if redis_host is defined %}
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port | default('6379') }}
{% endif %}

# S3 Configuration
{% if s3_bucket is defined %}
S3_BUCKET={{ s3_bucket }}
S3_REGION={{ aws_region | default('us-east-1') }}
{% endif %}

# Logging
LOG_LEVEL={{ log_level | default('INFO') }}
LOG_FILE=/var/log/inventory-manager/app.log

# Security
SECRET_KEY={{ secret_key | default('change-me-in-production') }}
{% if allowed_hosts is defined %}
ALLOWED_HOSTS={{ allowed_hosts | join(',') }}
{% endif %}
